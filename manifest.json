{
	"manifest_version" : 2,

	"name" : "Chrome Time Log",
	"description" : "Record how long you spend on each webpage.",
	"version" : "0.0.0.1",

	"background" :{
		"scripts" : ["index.js"],
		"persistent": false
	},
	"browser_action" : {
		"default_icon" : "clock.png",
		"default_popup" : "index.html",
		"default_title" : "Page Time"
	},
	"permissions" : [
		"activeTab",
		"https://ajax.googleapis.com/",
		"tabs",
		"storage"
	]
}